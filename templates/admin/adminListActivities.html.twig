{% extends 'admin/base.html.twig' %}

{% block title %}Administration du forum{% endblock %}

{% block body %}

    <div class="container-fluid">

        <h1 class="my-3">Gestion des activités</h1>
        <table class="table table-hover">
            <thead>
            <tr>
                <th>Nom d'activité</th>
                <th>List Conversations</th>
                <th>Action</th>
            </tr>
            </thead>

            <tbody>
            {% for activity in adminListActivities %}

            <tr>
                <td>{{ activity.nameActivity }}</td>

                <td><a href="/adminListConversations/{{ activity.id }}" class="btn btn-primary">AFFICHER
                    </a></td>

                <td><a href="deleteActivity/{{ activity.id }}" class="btn btn-primary">
                        <i class="fa fa-trash-o"></i></a></td>

                {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('createActivity') }}">
            <button type="submit" class="btn btn-success" style="margin-top: 20px;">Créer une nouvelle activité
            </button>
        </a>
    </div>
{% endblock %}
